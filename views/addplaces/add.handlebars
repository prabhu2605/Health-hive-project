<div class="add-place-container">
  <h1>Add New Wellness Place</h1>
  
  {{#if error}}
    <div class="alert alert-danger" style="color: red; margin-bottom: 20px;">
      {{error}}
    </div>
  {{/if}}

  <form action="/manage-places/add" method="POST" class="place-form">
    <div class="form-group">
      <label for="name">Place Name*</label>
      <input type="text" id="name" name="name" value="{{formData.name}}" required>
    </div>

    <div class="form-group">
      <label for="type">Place Type*</label>
      <select id="type" name="type" required>
        <option value="">Select a type</option>
        <option value="Yoga Studio" {{#eq formData.type "Yoga Studio"}}selected{{/eq}}>Yoga Studio</option>
        <option value="Gym" {{#eq formData.type "Gym"}}selected{{/eq}}>Gym</option>
        <option value="Spa" {{#eq formData.type "Spa"}}selected{{/eq}}>Spa</option>
        <option value="Meditation Center" {{#eq formData.type "Meditation Center"}}selected{{/eq}}>Meditation Center</option>
        <option value="Holistic Center" {{#eq formData.type "Holistic Center"}}selected{{/eq}}>Holistic Center</option>
      </select>
    </div>

    <div class="form-group">
      <label for="servicesOffered">Services Offered* (comma separated)</label>
      <textarea id="servicesOffered" name="servicesOffered" required>{{formData.servicesOffered}}</textarea>
    </div>

    <div class="form-group">
      <label for="address">Address*</label>
      <input type="text" id="address" name="address" value="{{formData.address}}" required>
    </div>

    <div class="form-group">
      <label for="city">City*</label>
      <input type="text" id="city" name="city" value="{{formData.city}}" required>
    </div>

    <div class="form-group">
      <label for="description">Description*</label>
      <textarea id="description" name="description" required>{{formData.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="tags">Tags* (comma separated)</label>
      <input type="text" id="tags" name="tags" value="{{formData.tags}}" required>
    </div>

   

    <button type="submit" class="btn-submit">Add Place</button>
    <a href="/" class="btn-cancel">Cancel</a>
  </form>
</div>