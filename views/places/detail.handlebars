<div class="place-detail-container">
  {{#if success}}
    <div class="alert alert-success">{{success}}</div>
  {{/if}}
  {{#if error}}
    <div class="alert alert-error">{{error}}</div>
  {{/if}}

  <h1>{{place.name}}</h1>
  
  <div class="place-meta">
    <span class="place-type">{{place.type}}</span>
    <span class="place-location">
      {{place.location.address}}, {{place.location.city}}, {{place.location.state}} {{place.location.zip}}
    </span>
  </div>

  <div class="place-content">
    <div class="place-services">
      <h3>Services Offered</h3>
      <ul>
        {{#each place.services}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="place-stats">
      <p>Average Rating: {{place.averageRating}} ★</p>
      <p>Review Count: {{place.reviewCount}}</p>
    </div>
  </div>

  <div class="place-actions">
    <a href="/places" class="btn-back">← Back to all places</a>
    {{#if user}}
      {{#if (eq user._id (toString place.addedBy))}}
        <a href="/places/{{place._id}}/edit" class="btn-edit">Edit</a>
        <form action="/places/{{place._id}}?_method=DELETE" method="POST" class="delete-form">
          <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this place?')">
            Delete
          </button>
        </form>
      {{/if}}
    {{/if}}
  </div>
</div>

<style>
  .place-detail-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  .place-meta {
    margin: 15px 0;
    color: #666;
  }
  .place-services ul {
    list-style-type: none;
    padding: 0;
  }
  .place-services li {
    padding: 5px 0;
  }
  .place-actions {
    margin-top: 30px;
    display: flex;
    gap: 10px;
  }
  .btn-back, .btn-edit, .btn-delete {
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 4px;
  }
  .btn-back {
    background: #f0f0f0;
    color: #333;
  }
  .btn-edit {
    background: #4CAF50;
    color: white;
  }
  .btn-delete {
    background: #f44336;
    color: white;
    border: none;
    cursor: pointer;
  }
  .alert {
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 4px;
  }
  .alert-success {
    background: #dff0d8;
    color: #3c763d;
  }
  .alert-error {
    background: #f2dede;
    color: #a94442;
  }
</style>