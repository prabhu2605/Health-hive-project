<div class="add-place-container">
  <h1>Add New Wellness Place</h1>
  
  {{#if error}}
    <div class="alert alert-danger" style="color: red; margin-bottom: 20px;">
      {{error}}
    </div>
  {{/if}}

  <form action="/places/add" method="POST" class="place-form">
    <div class="form-group">
      <label for="name">Place Name*</label>
      <input type="text" id="name" name="name" value="{{formData.name}}" required>
    </div>

    <div class="form-group">
      <label for="type">Place Type*</label>
      <select id="type" name="type" required>
        <option value="">Select a type</option>
        <option value="Yoga Studio" {{#eq formData.type "Yoga Studio"}}selected{{/eq}}>Yoga Studio</option>
        <option value="Gym" {{#eq formData.type "Gym"}}selected{{/eq}}>Gym</option>
        <option value="Therapy Center" {{#eq formData.type "Therapy Center"}}selected{{/eq}}>Therapy Center</option>
        <option value="Nutritionist" {{#eq formData.type "Nutritionist"}}selected{{/eq}}>Nutritionist</option>
        <option value="Fitness Class" {{#eq formData.type "Fitness Class"}}selected{{/eq}}>Fitness Class</option>
      </select>
    </div>

    <div class="form-group">
      <label for="services">Services Offered* (comma separated)</label>
      <textarea id="services" name="services" required>{{formData.services}}</textarea>
    </div>

    <h3>Location</h3>
    <div class="form-group">
      <label for="address">Address*</label>
      <input type="text" id="address" name="address" value="{{formData.address}}" required>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="city">City*</label>
        <input type="text" id="city" name="city" value="{{formData.city}}" required>
      </div>

      <div class="form-group">
        <label for="state">State*</label>
        <input type="text" id="state" name="state" value="{{formData.state}}" required>
      </div>

      <div class="form-group">
        <label for="zip">ZIP Code*</label>
        <input type="text" id="zip" name="zip" value="{{formData.zip}}" required>
      </div>
    </div>

    <button type="submit" class="btn-submit">Add Place</button>
    <a href="/places" class="btn-cancel">Cancel</a>
  </form>
</div>