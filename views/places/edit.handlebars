<div class="edit-place-container">
  <h1>Edit {{place.name}}</h1>
  
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form action="/places/{{place._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label>Place Name:</label>
      <input type="text" name="name" value="{{place.name}}" required>
    </div>
    
    <div class="form-group">
      <label>Type:</label>
      <select name="type" required>
        <option value="Yoga Studio" {{#eq place.type "Yoga Studio"}}selected{{/eq}}>Yoga Studio</option>
        <option value="Gym" {{#eq place.type "Gym"}}selected{{/eq}}>Gym</option>
        <option value="Therapy Center" {{#eq place.type "Therapy Center"}}selected{{/eq}}>Therapy Center</option>
      </select>
    </div>
    
    <div class="form-group">
      <label>Services (comma separated):</label>
      <textarea name="services" required>{{place.services}}</textarea>
    </div>
    
    <div class="form-group">
      <label>Address:</label>
      <input type="text" name="address" value="{{place.location.address}}" required>
    </div>
    
    <div class="form-row">
      <div class="form-group">
        <label>City:</label>
        <input type="text" name="city" value="{{place.location.city}}" required>
      </div>
      <div class="form-group">
        <label>State:</label>
        <input type="text" name="state" value="{{place.location.state}}" required>
      </div>
      <div class="form-group">
        <label>ZIP:</label>
        <input type="text" name="zip" value="{{place.location.zip}}" required>
      </div>
    </div>
    
    <button type="submit" class="btn-submit">Update Place</button>
    <a href="/places/{{place._id}}" class="btn-cancel">Cancel</a>
  </form>
</div>